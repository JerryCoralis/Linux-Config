Config { font = "xft:Bitstream Vera Sans Mono:size=9:bold:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 100
       , commands = [ Run Weather "CYYZ" ["-t"," <tempF>F","-L","64","-H","77","--normal","green","--high","red","--low","lightblue"] 36000
                    , Run MultiCpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <free> mb"] 10
                    , Run Swap ["-t", "Swap: <free> mb"] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run StdinReader
                    , Run CpuFreq["-t", "<cpu0>", "-L", "0", "-H", "2","-l", "lightblue", "-n","white", "-h", "red" ] 50
                    , Run ThermalZone 0 ["-t","<temp>C", "-L", "50", "-H", "60","-l", "lightblue", "-n","white", "-h", "red"] 50
                    , Run Battery ["-t", "Battery: <left>% / <timeleft> h",
                                   "-L", "10", "-H", "80", "-p", "3",
                                   "--", "-O", "<fc=green>On</fc> - ", "-o", "",
                                   "-L", "30", "-H", "-70",
                                   "-l", "red", "-m", "blue", "-h", "green"] 60
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %multicpu% @ %cpufreq% & %thermal0% | %battery% | <fc=#ee9a00>%date%</fc>"
       }
